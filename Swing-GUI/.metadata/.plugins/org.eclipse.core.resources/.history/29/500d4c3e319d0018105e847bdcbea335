package com.swabhav.framedemo;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.EventObject;

import javax.swing.JButton;
import javax.swing.JFrame;


public class RedButtonHandler implements ActionListener {

	JButton button;
	public RedButtonHandler(JButton button) {
		this.button = this.button;
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		System.out.println("Width "+button.getSize().getWidth()+"\nHeight: "+button.getSize().getHeight());
	}

}
